@using Framework.MVC.Resources
@using Framework.MVC.Extensions
@using Topppro.Entities.Resources

@model Topppro.Entities.Package

@{
    ViewBag.Title = PersistanceResource.Delete;
}

<h2>@PersistanceResource.Delete</h2>

<h3>@PersistanceResource.Delete_Message</h3>
<fieldset>
    <legend>@Ent_PackageResource._Caption</legend>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.ParentProductId)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ParentProduct.Name)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.ChildProductId)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ChildProduct.Name)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Priority)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Priority)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Enabled)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Enabled)
    </div>

</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="@PersistanceResource.Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
