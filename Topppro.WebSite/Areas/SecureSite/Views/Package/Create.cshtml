@using Framework.MVC.Resources
@using Topppro.Entities.Resources

@model Topppro.Entities.Package

@{
    ViewBag.Title = PersistanceResource.Create;
}

<h2>@PersistanceResource.Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Ent_PackageResource._Caption</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ParentProductId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model  => model.ParentProductId, null, PersistanceResource.Selection)
            @Html.ValidationMessageFor(model => model.ParentProductId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ChildProductId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.ChildProductId, null, PersistanceResource.Selection)
            @Html.ValidationMessageFor(model => model.ChildProductId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Priority)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Priority)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Enabled)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Enabled)
            @Html.ValidationMessageFor(model => model.Enabled)
        </div>

        <p>
            <input type="submit" value="@PersistanceResource.Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script src="@Url.Content("~/Areas/SecureSite/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/SecureSite/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
