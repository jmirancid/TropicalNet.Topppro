@using Framework.MVC.Resources
@using Topppro.Entities.Resources
@using Framework.Common.Extensions

@model IEnumerable<Topppro.Entities.Category>

@{
    ViewBag.Title = PersistanceResource.Index;
}

@section Styles {
    <link href="@Url.Content("~/Areas/SecureSite/Content/Styles/themes/base/jquery-ui-1.10.4.min.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        ol
        {
            counter-reset: li;
            margin-left: 0;
            padding-left: 0;
        }
        ol > li
        {
            position: relative;
            margin: 0 0 6px 2em;
            padding: 4px 8px;
            list-style: none;
            border-top: 2px solid #666;
            background: #c6c6c6;
        }
        ol > li:before
        {
            content: counter(li);
            counter-increment: li;
            position: absolute;
            top: -2px;
            left: -2em;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
            width: 2em;
            margin-right: 8px;
            padding: 4px;
            border-top: 2px solid #666;
            color: #fff;
            background: #666;
            font-weight: bold;
            text-align: center;
        }
        li ol, li ul
        {
            margin-top: 6px;
        }
        ol ol li:last-child
        {
            margin-bottom: 0;
        }
        .ui-state-highlight
        {
            border-style: dashed;
        }
        .ui-state-active
        {
            padding: 2px;
            margin-bottom: 5px;
        }
        .clickable
        {
            cursor: pointer;
        }
        .panel-heading span
        {
            margin-top: -20px;
            font-size: 15px;
        }
        .modal-header
        {
            background-color: #800000;
            color: #ffffff;
        }
        .tooltip-inner
        {
            max-width: 300px;
            padding: 0;
        }
        .tooltip-alert
        {
            padding: 8px 10px;
            font-weight: bolder;
            color: #A94442;
        }
    </style>
}

@section Title {
    <h2>@PersistanceResource.Index</h2>
    <h5>@Ent_AssnCategorySerieResource._Caption</h5>
    <hr />
}

<div class="row">
	<div class="col-md-3 col-sm-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@Ent_SerieResource._Caption</h3>
            </div>
            <div class="panel-body">
                <ul class="draggable list-unstyled">
                    @foreach (var serie in ViewBag.Series)
                    {
                        <li class="ui-state-active" data-id="@serie.Id">@serie.Name</li>
                    }
                </ul>
            </div>
        </div>
    </div>
	<div class="col-md-9 col-sm-9">
		<div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-6 col-sm-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">@category.Name</h3>
                            <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
                        </div>
                        <div class="panel-body">
                            <ol class="sortable" data-id="@category.Id">
                            @foreach (var assn in category.Assn_CategorySerie.OrderBy(a => a.Priority))
                            {
                                <li data-id="@assn.Id">@assn.Serie.Name
                                    <div class="btn-group btn-group-xs pull-right">
                                        @Html.ActionLink(string.Format("{0} ({1})", Ent_ProductResource._Caption, assn.Assn_CategorySerieProduct.Count), null, "AssnCategorySerieProduct", 
                                            new { id = assn.Id },
                                            new { @class = "btn btn-success", @title = string.Format("{0} ({1})", Ent_ProductResource._Caption, assn.Assn_CategorySerieProduct.Count) })
                                        @Ajax.ActionLink(PersistanceResource.Edit, "Edit", null, 
                                            new { id = assn.Id },
                                            new AjaxOptions() { HttpMethod = "Get", UpdateTargetId = "dialog-assn-form", OnSuccess = "$.validator.unobtrusive.parse($('#dialog-assn-form')); $('#dialog-assn').modal({ show: true });" },
                                            new { @class = "btn btn-warning", @title = PersistanceResource.Edit })
                                        @Ajax.ActionLink(PersistanceResource.Delete, "Delete", null,
                                            new { id = assn.Id },
                                            new AjaxOptions() { HttpMethod = "Post", Confirm = PersistanceResource.Delete_Message, OnSuccess = "el.remove();" },
                                            new { @class = "btn btn-danger", @title = PersistanceResource.Delete, @onclick = "el = $(this).parents('li');" })
                                    </div>
                                </li>
                            }
                            </ol>
                        </div>
                    </div>
                </div>
            }
		</div>
	</div>
</div>

@*Modal Window Editor*@
<div id="dialog-assn" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="dialog-assn">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Ajax.BeginForm("Edit", null,
                new AjaxOptions() { UpdateTargetId = "dialog-assn-form", LoadingElementId = "modal-loader", OnSuccess = "$('#dialog-assn').modal('hide');" }, new { id = "dialog-assn-form" }))
            {
            }
        </div>
        
    </div>
</div>

@section Scripts {
    @Html.Partial("_Validation")
    <script src="@Url.Content("~/Areas/SecureSite/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script type="text/javascript">

        var el;

        $(document).ajaxError(function (event, xhr, settings, error) {
            alert(xhr.statusText);
        });
        
        $(function () {
            $('.draggable > li').draggable({
                revert: 'invalid',
                connectToSortable: '.sortable',
                helper: 'clone'
            });

            $('.sortable').sortable({
                forceHelperSize: true,
                forcePlaceholderSize: true,
                placeholder: 'ui-state-highlight',
                receive: function (event, ui) {

                    var el = $(this).data().uiSortable.currentItem;

                    $.post(
                        '@Url.Action("Insert")',
                        { categoryId: el.parent().data('id'), serieId: el.data('id'), priority: $(this).data('ui-sortable').currentItem.index() + 1 },
                        function (data, status, xhr) {
                            el.replaceWith(data);
                            el.addClass('new');
                        });

                    return true;
                },
                update: function (event, ui) {
                    if (!ui.item.hasClass('new')) {
                        $.post('@Url.Action("Reorder")', { id: $(ui.item).data('id'), priority: ui.item.index() + 1 });
                    }
                    ui.item.removeClass();
                }
            }).disableSelection();

            $(document).on('click', '.panel-heading span.clickable', function (event) {
                
                var el = $(this);

                if (!el.hasClass('panel-collapsed')) {
                    el.parents('.panel').find('.panel-body').slideUp();
                    el.addClass('panel-collapsed');
                    el.find('i').removeClass('glyphicon-chevron-up').addClass('glyphicon-chevron-down');
                } else {
                    el.parents('.panel').find('.panel-body').slideDown();
                    el.removeClass('panel-collapsed');
                    el.find('i').removeClass('glyphicon-chevron-down').addClass('glyphicon-chevron-up');
                }
            })
        });
    </script>
}
