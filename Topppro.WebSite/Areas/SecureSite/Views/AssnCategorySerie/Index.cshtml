@using Framework.MVC.Resources
@using Topppro.Entities.Resources
@using Framework.Common.Extensions

@model IEnumerable<Topppro.Entities.Category>

@{
    ViewBag.Title = PersistanceResource.Index;
}

@section Styles {
    <link href="@Url.Content("~/Areas/SecureSite/Content/Styles/themes/base/jquery-ui-1.10.4.min.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        ol
        {
            counter-reset: li;
            margin-left: 0;
            padding-left: 0;
        }
        ol > li
        {
            position: relative;
            margin: 0 0 6px 2em;
            padding: 4px 8px;
            list-style: none;
            border-top: 2px solid #666;
            background: #c6c6c6;
        }
        ol > li:before
        {
            content: counter(li);
            counter-increment: li;
            position: absolute;
            top: -2px;
            left: -2em;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
            width: 2em;
            
            margin-right: 8px;
            padding: 4px;
            border-top: 2px solid #666;
            color: #fff;
            background: #666;
            font-weight: bold;
            text-align: center;
        }
        li ol, li ul
        {
            margin-top: 6px;
        }
        ol ol li:last-child
        {
            margin-bottom: 0;
        }
        .ui-state-highlight
        {
            border-style: dashed;
        }
        .ui-state-active
        {
            padding: 2px;
            margin-bottom: 5px;
        }
    </style>
}

<h2>@PersistanceResource.Index</h2>
<h5>@Ent_AssnCategorySerieResource._Caption</h5>
<hr />

<div class="row">
	<div class="col-md-3 col-sm-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Ent_SerieResource._Caption
            </div>
            <div class="panel-body">
                <ul class="draggable list-unstyled">
                    @foreach (var serie in ViewBag.Series)
                    {
                        <li class="ui-state-active" data-id="@serie.Id">@serie.Name</li>
                    }
                </ul>
            </div>
        </div>
    </div>
	<div class="col-md-9 col-sm-9">
		<div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-6 col-sm-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            @category.Name
                        </div>
                        <div class="panel-body">
                            <ol class="sortable" data-id="@category.Id">
                            @foreach (var assn in category.Assn_CategorySerie.OrderBy(a => a.Priority))
                            {
                                <li data-id="@assn.Id">@assn.Serie.Name
                                    <div class="btn-group btn-group-xs pull-right">
                                        <a href="javascript:void(0);" rel="edit" class="btn btn-warning">
                                            <i class="fa fa-pencil"></i> @PersistanceResource.Edit</a>
                                        <a href="javascript:void(0);" rel="delete" class="btn btn-danger">
                                            <i class="fa fa-close"></i> @PersistanceResource.Delete</a>
                                    </div>
                                </li>
                            }
                            </ol>
                        </div>
                    </div>
                </div>
            }
		</div>
	</div>
</div>

<div id="dialog-assn" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="dialog-assn">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Ajax.BeginForm("Edit", null,
                new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "dialog-assn-form", OnSuccess = "$('#dialog-assn').modal('hide');" }, new { id = "dialog-assn-form" }))
            {
            }
        </div>
        
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/Areas/SecureSite/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/SecureSite/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/SecureSite/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('.draggable > li').draggable({
                revert: 'invalid',
                connectToSortable: '.sortable',
                helper: 'clone'
            });

            $('.sortable').sortable({
                forceHelperSize: true,
                forcePlaceholderSize: true,
                placeholder: 'ui-state-highlight',
                receive: function (event, ui) {

                    var el = $(this).data().uiSortable.currentItem;

                    var tpl = 
                        '<div class="btn-group btn-group-xs pull-right">' +
                            '<a href="javascript:void(0);" rel="edit" class="btn btn-warning"><i class="fa fa-pencil"></i> @PersistanceResource.Edit</a>' +
                            '<a href="javascript:void(0);" rel="delete" class="btn btn-danger"><i class="fa fa-close"></i> @PersistanceResource.Delete</a>' +
                        '</div>';

                    var success = false;

                    $.post('@Url.Action("Insert")', { categoryId: el.parent().data('id'), serieId: el.data('id'), priority: $(this).data('ui-sortable').currentItem.index() + 1 }, function (data, status, xhr) {

                        success =
                            (data.success === '@bool.TrueString');

                        if (success) {
                            tpl.replace(/0/g, data.id);
                            el.append(tpl);
                            el.removeClass();
                            el.data('id', data.id);

                            el.addClass('new');
                        }
                    });

                    return success;
                },
                update: function (event, ui) {

                    if (!ui.item.hasClass('new')) {
                        $.post('@Url.Action("Reorder")', { id: $(ui.item).data('id'), priority: ui.item.index() + 1 });
                    }

                    ui.item.removeClass();
                }
            }).disableSelection();

            // Edit Event Behavior
            $(document).on('click', 'a[rel="edit"]', function (event) {
                
                var el = $(this).parents('li');

                $.get('@Url.Action("Edit")', { id: el.data('id') }, function(data, status, xhr) {
                    
                    if (data.success === '@bool.FalseString') { alert(data.message); return false; }
                    
                    $('#dialog-assn-form').html(data);
                    
                    $.validator.unobtrusive.parse($('#dialog-assn-form'));
                    $('#dialog-assn').modal({ show: true });
                });
            });

            // Delete Event Behavior
            $(document).on('click', 'a[rel="delete"]', function (event) {
                
                var el = $(this).parents('li');
                
                if (confirm('@PersistanceResource.Delete_Message'))
                {
                    $.post('@Url.Action("Delete")', { id: el.data('id') }, function(data, status, xhr) {
                    
                        if (data.success === '@bool.FalseString') { alert(data.message); return false; }
                    
                        el.remove();
                    });
                }
            });
        });
    </script>
}
