@using Framework.MVC.Extensions
@using Framework.MVC.Resources

@model IEnumerable<Topppro.Entities.Attribute>

@{
    ViewBag.Title = PersistanceResource.Index;
}

@section Styles {
    <link rel="Stylesheet" type="text/css" href="@Url.Content("~/Areas/SecureSite/Content/themes/base/jquery.ui.all.css")" />
    <link rel="Stylesheet" type="text/css" href="@Url.Content("~/Areas/SecureSite/Content/jquery-ui.dataTables.css")" />
}

<h2>@PersistanceResource.Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table width="100%">
    <thead>
        <tr>
            <th width="8%">
                @Html.DisplayNameFor(model => model.Product.Serie.CategoryId)
            </th>
            <th width="5%">
                @Html.DisplayNameFor(model => model.Product.SerieId)
            </th>
            <th width="10%">
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th width="8%">
                @Html.DisplayNameFor(model => model.CultureId)
            </th>
            <th width="15%">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th width="25%">
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th width="8%">
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th width="8%">
                @Html.DisplayNameFor(model => model.Enabled)
            </th>
            <th width="20%">
                @PersistanceResource.Actions
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Serie.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Serie.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Culture.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Enabled)
            </td>
            <td>
                @Html.ActionLink(PersistanceResource.Edit, "Edit", new { id = item.AttributeId }) |
                @Html.ActionLink(PersistanceResource.Details, "Details", new { id = item.AttributeId }) |
                @Html.ActionLink(PersistanceResource.Delete, "Delete", new { id = item.AttributeId })
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Areas/SecureSite/Scripts/jquery.dataTables.min.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('table').dataTable({
                bJQueryUI: true
            });
        });
    </script>
}