@using Framework.MVC.Extensions
@using Framework.MVC.Resources

@model Topppro.Entities.Product

<div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", style = "width:400px;" })
    @Html.ValidationMessageFor(model => model.Name)
</div>

<div class="form-group">
    @Html.LabelFor(model => model.ModelId)
    @Html.DropDownListFor(model => model.ModelId, null, PersistanceResource.Selection, new { @class = "form-control", style = "width:400px;" })
    @Html.ValidationMessageFor(model => model.ModelId)
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Folder)
    @Html.TextBoxFor(model => model.Folder, new { @class = "form-control", style = "width:400px;" })
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Manual)
    @Html.DropDownListFor(model => model.Manual, null, PersistanceResource.Selection, new { @class = "form-control", style = "width:400px;" })
</div>

<div class="checkbox">
    <label>
        @Html.CheckBoxFor(m => m.Draft)
        @Html.DisplayNameFor(m => m.Draft)
    </label>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Badge)
    @Html.TextBoxFor(model => model.Badge, new { @class = "form-control", style = "width:400px;" })
</div>
