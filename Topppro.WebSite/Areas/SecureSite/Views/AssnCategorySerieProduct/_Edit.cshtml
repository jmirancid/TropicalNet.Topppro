@using Framework.MVC.Resources
@using Topppro.Entities.Resources

@model Topppro.Entities.Assn_CategorySerieProduct

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">@Model.Assn_CategorySerie.Category.Name / @Model.Assn_CategorySerie.Serie.Name</h4>
    <small>@Model.Product.Name</small>
</div>
<div class="modal-body">
    @Html.ValidationSummary(true)
    <fieldset>
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.AssnCategorySerieId)
        @Html.HiddenFor(model => model.ProductId)
        
        <div class="form-group">
            @Html.LabelFor(model => model.Priority)
            @Html.TextBoxFor(model => model.Priority, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AllowCompare)
            <div class="checkbox">
                <label>@Html.EditorFor(model => model.AllowCompare)</label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Enabled)
            <div class="checkbox">
                <label>@Html.EditorFor(model => model.Enabled)</label>
            </div>
        </div>
    </fieldset>
</div>
<div class="modal-footer">
    <div id="modal-loader" class="pull-left text-primary" style="display:none;">
        <i class="fa fa-circle-o-notch fa-spin fa-2x fa-fw"></i></div>
    <button type="button" class="btn btn-default" data-dismiss="modal">
        Close</button>
    <input class="btn btn-primary" type="submit" value="@PersistanceResource.Save" />
</div>
