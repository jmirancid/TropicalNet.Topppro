@model IEnumerable<Topppro.Entities.Attribute>

<table width="100%" border="1" cellpadding="0" cellspacing="0" bordercolor="#999999" class="table table-striped">
    <tbody>
    @foreach (var attr in Model) 
    {
        <tr height="20">
        @if (string.IsNullOrWhiteSpace(attr.Value))
        {
            <td height="20" colspan="2" align="center">@attr.Name</td>
        }
        else
        {
            <td width="30%" height="20" align="center">@attr.Name</td>
            <td width="70%" align="center">@Html.Raw(attr.Value)</td>
        }
        </tr>
    }
    </tbody>
</table>
