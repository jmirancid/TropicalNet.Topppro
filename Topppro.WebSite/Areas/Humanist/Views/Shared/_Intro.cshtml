@using Topppro.Entities

<link rel="Stylesheet" type="text/css" href="@Url.Content("~/Areas/Humanist/Scripts/jssor.slider-19.0/jssor.slider.css")" />
<div id="intro_banner" style="position: relative; width: 1000px; height: 481px; overflow: hidden;">
    <!-- Loading Screen -->
    <div u="loading" style="position: absolute; top: 0px; left: 0px;">
        <span>Loading...</span>
    </div>
    <!-- Slides Container -->
    <div u="slides" style="cursor: move; position: absolute; left: 0px; top: 0px; width: 1000px;
        height: 481px; overflow: hidden;">
        <div>
            <a u="image" href="@Url.RouteUrl("Detail", new { controller = Category_Enum.Mixers.ToString(), id = 68, name = "t20" })">
                <img src2="@Url.Content("~/Areas/Humanist/Content/Images/intro-1.jpg")" alt="" border="0"/></a></div>
        <div>
            <a u="image" href="@Url.RouteUrl("Catalog", new { controller = Category_Enum.Wireless.ToString() })">
                <img src2="@Url.Content("~/Areas/Humanist/Content/Images/intro-2.jpg")" alt=""/></a></div>
        <div>
            <a u="image" href="@Url.RouteUrl("Catalog", new { controller = Category_Enum.Wireless.ToString() })">
                <img src2="@Url.Content("~/Areas/Humanist/Content/Images/intro-3.jpg")" alt=""/></a></div>
        <div>
            <a u="image" href="@Url.RouteUrl("Catalog", new { controller = Category_Enum.Speakers.ToString() })">
                <img src2="@Url.Content("~/Areas/Humanist/Content/Images/intro-5.jpg")" alt=""/></a></div>
        <div>
            <a u="image" href="https://itunes.apple.com/en/app/t20i/id950579631?mt=8" target="_blank">
                <img src2="@Url.Content("~/Areas/Humanist/Content/Images/intro-6.jpg")" alt=""/></a></div>
    </div>
    <!-- Arrow Left -->
    <span u="arrowleft" class="jssorarrowl" style="top: 123px; left: 8px;">
    </span>
    <!-- Arrow Right -->
    <span u="arrowright" class="jssorarrowr" style="top: 123px; right: 8px;">
    </span>
</div>
<script src="@Url.Content("~/Areas/Humanist/Scripts/jssor.slider-19.0/jssor.slider.min.js")" type="text/javascript"></script>
<script type="text/javascript" language="javascript">
    init_jssor_slider1 = function (containerId) {

        var options = {
            $AutoPlay: true,
            $SlideEasing: $JssorEasing$.$EaseInCubic,
            $SlideDuration: 500,
            $SlideSpacing: 0,
                    
            $ArrowNavigatorOptions: {
                $Class: $JssorArrowNavigator$,
                $ChanceToShow: 2,
                $AutoCenter: 2,
                $Steps: 1
            }
        };

        var jssor_slider1 = new $JssorSlider$(containerId, options);
    };

    init_jssor_slider1("intro_banner");
</script>
