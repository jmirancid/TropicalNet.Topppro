@using Topppro.WebSite.Extensions
@using Framework.Common.Extensions

@model Topppro.Entities.Assn_CategorySerieProduct

@if (!Model.Product.GetHeaders().IsEmpty()) {
    <img src="@Model.Product.GetHeaders().FirstOrDefault()" alt="@Model.Product.Name" width="884" height="22" />
} else {
    <div class="Estilo44" style="display:inline; background-color:#315F8D; font-size:16px; padding: 3px 204px 12px 3px;">@Model.Product.Name.ToUpper()</div>
    <div class="Estilo67" style="float:right; font-size:16px;">@Model.Assn_CategorySerie.Serie.Name</div>
    <img src="@Url.Content("~/Content/Images/spacer.png")" alt="spacer" width="100%" height="12" />
}
