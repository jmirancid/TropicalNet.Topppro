@model IEnumerable<Topppro.Entities.Attribute>

@functions {

    void SetColors(int index)
    {
        ViewBag.KeyColor = 
        ViewBag.ValueColor = 
        ViewBag.ValueClass = string.Empty;
        
        if (index == 0)
        {
            ViewBag.KeyColor = "#FFFFFF";
            ViewBag.ValueColor = "#315F8D";
            ViewBag.ValueClass = "Estilo45";
        } else if (index != 0 && index % 2 != 0)
        {
            ViewBag.KeyColor = "#CCCCCC";
            ViewBag.ValueColor = "#CCCCCC";
        }
    }
}

<table width="100%" border="1" cellpadding="0" cellspacing="0" bordercolor="#999999">
    <tbody>
    @foreach (var attr in Model) 
    {
        SetColors(Model.ToList().IndexOf(attr));
        
        <tr height="20">
        @if (string.IsNullOrWhiteSpace(attr.Value))
        {
            <td height="20" colspan="2" align="center" bgcolor="@ViewBag.KeyColor"><b>@attr.Name</b></td>
        }
        else
        {
            <td width="30%" height="20" align="center" bgcolor="@ViewBag.KeyColor">@attr.Name</td>
            <td width="70%" align="center" bgcolor="@ViewBag.ValueColor"><span class="@ViewBag.ValueClass">@Html.Raw(attr.Value)</span></td>
        }
        </tr>
    }
    </tbody>
</table>
