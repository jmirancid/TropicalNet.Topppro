@using Framework.Common.Extensions

@model IEnumerable<Topppro.Entities.Attribute>

<table width="100%" border="1" cellpadding="0" cellspacing="0" bordercolor="#999999" class="table-striped" style="margin: 14px 0 24px;">
    <tbody>
    @foreach (var attr in Model)
    {
        <tr>
        @if (attr.Value.IsEmpty())
        {
            <td colspan="2" align="center">@attr.Name</td>
        }
        else
        {
            <td width="30%" align="center">@attr.Name</td>
            <td width="70%" align="center">@Html.Raw(attr.Value)</td>
        }
        </tr>
    }
    </tbody>
</table>

