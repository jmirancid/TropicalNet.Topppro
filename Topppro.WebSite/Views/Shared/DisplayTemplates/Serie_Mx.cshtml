@using Topppro.WebSite.Resources
@using Topppro.WebSite.Extensions
@using Framework.Common.Extensions

@model Topppro.Entities.Serie

@Html.Separator()

<tr>
    <td width="55">
        &nbsp;
    </td>
    <td colspan="9">
        <img id="@Model.Name.ToSeoSlug()" src="@Url.Content("~/Content/Images/mx-series-spacer.png")" alt="@Model.Name.ToUpper() SERIES" width="881" height="43">
    </td>
    <td width="55">
        &nbsp;
    </td>
</tr>

@Html.Separator()

<tr>
    <td>
        &nbsp;
    </td>
    <td colspan="9" align="center" bgcolor="#F5F5F5">
        <span class="Estilo6">@Html.Raw(Localization.Mixers_Index_Mx_Bluetooth)</span>
    </td>
    <td>
        &nbsp;
    </td>
</tr>

@Html.Pattern()

@if (!Model.Products.IsEmpty())
{
    @Html.Partial("_ProductPartial", Model.Products.Where(p => p.Enabled).OrderBy(p => p.Priority), new ViewDataDictionary { { "MaxPerLine", 5 } })
}
