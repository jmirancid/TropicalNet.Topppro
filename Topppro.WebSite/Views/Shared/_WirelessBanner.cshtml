<div id="ws_banner" style="position: relative; width: 964px; height: 280px; overflow: hidden;">
    <!-- Loading Screen -->
    <div u="loading" style="position: absolute; top: 0px; left: 0px;">
        <div style="display: block; position: absolute; top: 0px; left: 0px; width: 100%; height: 100%;
             background-color: #ffffff;">
        </div>
        <div style="display: block; position: absolute; top: 0px; left: 0px;width: 100%;height:100%;
            background: url('@Url.Content("~/Content/Images/loading.gif")') no-repeat center center;">
        </div>
    </div>
    <!-- Slides Container -->
    <div u="slides" style="cursor: move; position: absolute; left: 0px; top: 0px; width: 964px;
        height: 280px; overflow: hidden;">
        <div>
            <img src2="@Url.Content("~/Content/Images/wireless-slider-1.jpg")" alt=""/></div>
        <div>
            <img src2="@Url.Content("~/Content/Images/wireless-slider-2.jpg")" alt=""/></div>
        <div>
            <img src2="@Url.Content("~/Content/Images/wireless-slider-3.jpg")" alt=""/></div>
    </div>
    <!-- Arrow Left -->
    <span u="arrowleft" class="jssorarrowl" style="top: 123px; left: 8px;">
    </span>
    <!-- Arrow Right -->
    <span u="arrowright" class="jssorarrowr" style="top: 123px; right: 8px;">
    </span>
</div>
<script src="@Url.Content("~/Scripts/jssor.slider-19.0/jssor.slider.min.js")" type="text/javascript"></script>
